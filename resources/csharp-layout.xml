<Patterns xmlns="urn:schemas-jetbrains-com:member-reordering-patterns">
  <TypePattern DisplayName="xUnit.net Test Classes" RemoveRegions="All">
    <TypePattern.Match>
      <And>
        <Kind Is="Class" />
        <HasMember>
          <And>
            <Kind Is="Method" />
            <HasAttribute Name="Xunit.FactAttribute" Inherited="True" />
            <HasAttribute Name="Xunit.TheoryAttribute" Inherited="True" />
          </And>
        </HasMember>
      </And>
    </TypePattern.Match>

    <Entry DisplayName="Setup/Teardown Methods">
      <Entry.Match>
        <Or>
          <Kind Is="Constructor" />
          <And>
            <Kind Is="Method" />
            <ImplementsInterface Name="System.IDisposable" />
          </And>
        </Or>
      </Entry.Match>

      <Entry.SortBy>
        <Kind>
          <Kind.Order>
            <DeclarationKind>Constructor</DeclarationKind>
          </Kind.Order>
        </Kind>
      </Entry.SortBy>
    </Entry>


    <Entry DisplayName="All other members" />

    <Entry DisplayName="Test Methods" Priority="100">
      <Entry.Match>
        <And>
          <Kind Is="Method" />
          <HasAttribute Name="Xunit.FactAttribute" Inherited="false" />
          <HasAttribute Name="Xunit.TheoryAttribute" Inherited="false" />
        </And>
      </Entry.Match>

      <Entry.SortBy>
        <Name />
      </Entry.SortBy>
    </Entry>
  </TypePattern>

  <TypePattern DisplayName="PonderingProgrammer pattern">
    <!-- Constant Fields -->
    <Entry>
      <Entry.Match>
        <Kind Is="Constant" />
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Readonly />
      </Entry.SortBy>
    </Entry>

    <!-- Static fields -->
    <Entry>
      <Entry.Match>
        <And>
          <Kind Is="Field" />
          <Static/>
        </And>
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Readonly />
      </Entry.SortBy>
    </Entry>

    <!-- Static methods -->
    <Entry>
      <Entry.Match>
        <And>
          <Kind Is="Method" />
          <Static/>
        </And>
      </Entry.Match>
    </Entry>

    <!-- Operators -->
    <Entry Priority="100">
      <Entry.Match>
        <And>
          <Kind Is="Operator" />
          <Static/>
        </And>
      </Entry.Match>
    </Entry>
    
    <!-- Constructors -->
    <Entry>
      <Entry.Match>
        <Kind Is="Constructor" />
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Static />
        <Readonly />
      </Entry.SortBy>
    </Entry>

    <!-- Destructors -->
    <Entry>
      <Entry.Match>
        <Kind Is="Destructor" />
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Static />
        <Readonly />
      </Entry.SortBy>
    </Entry>
    
    <!-- Fields -->
    <Entry>
      <Entry.Match>
        <Kind Is="Field" />
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Static />
        <Readonly />
      </Entry.SortBy>
    </Entry>

    <!-- Properties -->
    <Entry>
      <Entry.Match>
        <Kind Is="Property" />
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Static />
        <Readonly />
      </Entry.SortBy>
    </Entry>

    <!-- Delegates -->
    <Entry>
      <Entry.Match>
        <Kind Is="Delegate" />
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Static />
        <Readonly />
      </Entry.SortBy>
    </Entry>

    <!-- Events -->
    <Entry>
      <Entry.Match>
        <Kind Is="Event" />
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Static />
        <Readonly />
      </Entry.SortBy>
    </Entry>

    <!-- Interfaces -->
    <Entry>
      <Entry.Match>
        <Kind Is="Interface" />
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Static />
        <Readonly />
      </Entry.SortBy>
    </Entry>

    <!-- Indexers -->
    <Entry>
      <Entry.Match>
        <Kind Is="Indexer" />
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Static />
        <Readonly />
      </Entry.SortBy>
    </Entry>

    <!-- Methods -->
    <Entry>
      <Entry.Match>
        <Kind Is="Method" />
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Static />
        <Readonly />
      </Entry.SortBy>
    </Entry>

    <!-- Enums -->
    <Entry>
      <Entry.Match>
        <Kind Is="Enum" />
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Readonly />
      </Entry.SortBy>
    </Entry>

    <!-- Structs -->
    <Entry>
      <Entry.Match>
        <Kind Is="Struct" />
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Static />
        <Readonly />
      </Entry.SortBy>
    </Entry>

    <!-- Classes -->
    <Entry>
      <Entry.Match>
        <Kind Is="Class" />
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Static />
        <Readonly />
      </Entry.SortBy>
    </Entry>

    <!--all other members-->
    <Entry/>

    <!--nested types-->
    <Entry>
      <Entry.Match>
        <Kind Is="Type"/>
      </Entry.Match>
      <Entry.SortBy>
        <Access />
        <Static />
        <Readonly />
      </Entry.SortBy>
    </Entry>
  </TypePattern>
</Patterns>
