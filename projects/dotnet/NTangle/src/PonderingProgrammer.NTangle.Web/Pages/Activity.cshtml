@page "{id?}"
@model ActivityModel

@{
    ViewData["Title"] = "Activity";
}

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Input.Name">Name</label>
        <input asp-for="Input.Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Input.Description">Description</label>
        <input asp-for="Input.Description" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Input.ParentId">Parent</label>
        <select asp-for="Input.ParentId" asp-items="@Model.ParentOptions" class="form-control">
            <option value="0">Software Development</option>
        </select>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>